{
  "compilerOptions": {
   "esModuleInterop": true, 
   "noImplicitAny": true,
   "moduleResolution": "node",
   "outDir": "dist",
   "baseUrl": "./",
    "target": "es6",                                  
    "module": "CommonJs",                              
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                                             
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"]
      }                                 
  },
  "include": ["src/**/*"]
}
